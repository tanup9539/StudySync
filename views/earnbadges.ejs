<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&family=Varela+Round&display=swap" rel="stylesheet">

<title>Achievement Badges with Input</title>
<style>
  body {
    font-family: 'Poppins', sans-serif;
    background: #f9fafb;
    padding: 2rem;
    text-align: center;
    background-image: url(img/noise.png);
  }
  input[type="number"] {
    padding: 0.5rem;
    font-size: 1.1rem;
    width: 120px;
    margin-bottom: 1.5rem;
    border: 1.5px solid #ccc;
    border-radius: 6px;
  }
  .badges {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }
  .badge {
    background: #eee;
    border-radius: 50%;
    width: 110px;
    height: 110px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #666;
    font-weight: bold;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    transition: background 0.3s ease, color 0.3s ease;
    user-select: none;
  }
  .badge .icon {
    font-size: 2.8rem;
    margin-bottom: 0.5rem;
  }
  /* Highlight achieved badges */
  .badge.achieved {
    background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    color: white;
    box-shadow: 0 6px 15px rgba(37,117,252,0.7);
  }
</style>
</head>
<body>

<h1>Achievement Badges</h1>

<label for="lessonsCompleted">Lessons Completed:</label><br />
<input type="number" id="lessonsCompleted" min="0" placeholder="Enter number" />

<div class="badges">
  <div class="badge" data-threshold="5">
    <div class="icon">🏅</div>
    <div>5 Lessons</div>
  </div>

  <div class="badge" data-threshold="10">
    <div class="icon">🎖️</div>
    <div>10 Lessons</div>
  </div>

  <div class="badge" data-threshold="20">
    <div class="icon">🏆</div>
    <div>20 Lessons</div>
  </div>
</div>

<script>
  const input = document.getElementById('lessonsCompleted');
  const badges = document.querySelectorAll('.badge');

  input.addEventListener('input', () => {
    const val = parseInt(input.value, 10);
    if (isNaN(val) || val < 0) {
      badges.forEach(badge => badge.classList.remove('achieved'));
      return;
    }
    badges.forEach(badge => {
      const threshold = parseInt(badge.getAttribute('data-threshold'), 10);
      if (val >= threshold) {
        badge.classList.add('achieved');
      } else {
        badge.classList.remove('achieved');
      }
    });
  });
</script>

</body>
</html>