<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Achievement Badges - StudySync</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            background-image: url('/img/noise.png');
            min-height: 100vh;
            padding: 2rem;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 3rem;
            color: rgb(51, 10, 90);;
        }

        .header h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }

        .header p {
            font-size: 1.2rem;
            opacity: 0.9;
            font-weight: 300;
        }

        .input-section {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            margin-bottom: 3rem;
            text-align: center;
        }

        .input-group {
            display: inline-block;
            text-align: left;
        }

        .input-group label {
            display: block;
            font-weight: 600;
            color: #555;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
        }

        .input-group input {
            padding: 1rem 1.5rem;
            font-size: 1.2rem;
            width: 200px;
            border: 2px solid #e1e5e9;
            border-radius: 15px;
            background: white;
            transition: all 0.3s ease;
            text-align: center;
        }

        .input-group input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

        .badges-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .badge {
            background: white;
            border-radius: 25px;
            padding: 2rem;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
        }

        .badge::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .badge:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        }

        .badge:hover::before {
            transform: scaleX(1);
        }

        .badge .icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            transition: transform 0.3s ease;
        }

        .badge:hover .icon {
            transform: scale(1.1);
        }

        .badge .title {
            font-size: 1.3rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .badge .description {
            color: #666;
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .badge .progress {
            margin-top: 1rem;
            height: 6px;
            background: #f0f0f0;
            border-radius: 3px;
            overflow: hidden;
        }

        .badge .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 3px;
            transition: width 0.5s ease;
            width: 0%;
        }

        /* Achieved badge styles */
        .badge.achieved {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            transform: scale(1.05);
        }

        .badge.achieved .title,
        .badge.achieved .description {
            color: white;
        }

        .badge.achieved .progress {
            background: rgba(255,255,255,0.3);
        }

        .badge.achieved .progress-bar {
            background: white;
        }

        .badge.achieved .icon {
            animation: bounce 0.6s ease;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-10px);
            }
            60% {
                transform: translateY(-5px);
            }
        }

        .achievement-message {
            background: linear-gradient(135deg, #4CAF50, #45a049);
            color: white;
            padding: 1rem 2rem;
            border-radius: 15px;
            margin: 1rem 0;
            font-weight: 500;
            opacity: 0;
            transform: translateY(-20px);
            transition: all 0.3s ease;
        }

        .achievement-message.show {
            opacity: 1;
            transform: translateY(0);
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 2rem;
            }
            
            .badges-container {
                grid-template-columns: 1fr;
            }
            
            .input-group input {
                width: 100%;
                max-width: 300px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Achievement Badges</h1>
            <p>Track your progress and unlock amazing achievements!</p>
        </div>

        <div class="input-section">
            <div class="input-group">
                <label for="lessonsCompleted">üìö Lessons Completed</label>
                <input type="number" id="lessonsCompleted" min="0" placeholder="Enter number" />
            </div>
        </div>

        <div class="badges-container">
            <div class="badge" data-threshold="5">
                <div class="icon">üèÖ</div>
                <div class="title">Beginner Learner</div>
                <div class="description">Complete your first 5 lessons and earn the bronze badge</div>
                <div class="progress">
                    <div class="progress-bar" style="width: 0%"></div>
                </div>
            </div>

            <div class="badge" data-threshold="10">
                <div class="icon">üéñÔ∏è</div>
                <div class="title">Dedicated Student</div>
                <div class="description">Reach 10 lessons and unlock the silver achievement</div>
                <div class="progress">
                    <div class="progress-bar" style="width: 0%"></div>
                </div>
            </div>

            <div class="badge" data-threshold="20">
                <div class="icon">üèÜ</div>
                <div class="title">Learning Champion</div>
                <div class="description">Master 20 lessons and become a gold champion</div>
                <div class="progress">
                    <div class="progress-bar" style="width: 0%"></div>
                </div>
            </div>

            <div class="badge" data-threshold="50">
                <div class="icon">üëë</div>
                <div class="title">Study Master</div>
                <div class="description">Complete 50 lessons and earn the crown of knowledge</div>
                <div class="progress">
                    <div class="progress-bar" style="width: 0%"></div>
                </div>
            </div>

            <div class="badge" data-threshold="100">
                <div class="icon">‚≠ê</div>
                <div class="title">Knowledge Legend</div>
                <div class="description">Reach 100 lessons and become a true legend</div>
                <div class="progress">
                    <div class="progress-bar" style="width: 0%"></div>
                </div>
            </div>

            <div class="badge" data-threshold="200">
                <div class="icon">üöÄ</div>
                <div class="title">Learning Rocket</div>
                <div class="description">Soar past 200 lessons and reach new heights</div>
                <div class="progress">
                    <div class="progress-bar" style="width: 0%"></div>
                </div>
            </div>
        </div>

        <div id="achievementMessage" class="achievement-message"></div>
    </div>

    <script>
        const input = document.getElementById('lessonsCompleted');
        const badges = document.querySelectorAll('.badge');
        const achievementMessage = document.getElementById('achievementMessage');

        function showAchievementMessage(message) {
            achievementMessage.textContent = message;
            achievementMessage.classList.add('show');
            setTimeout(() => {
                achievementMessage.classList.remove('show');
            }, 3000);
        }

        function updateBadges(val) {
            let achievementsUnlocked = 0;
            
            badges.forEach(badge => {
                const threshold = parseInt(badge.getAttribute('data-threshold'), 10);
                const progressBar = badge.querySelector('.progress-bar');
                
                if (val >= threshold) {
                    if (!badge.classList.contains('achieved')) {
                        badge.classList.add('achieved');
                        achievementsUnlocked++;
                        showAchievementMessage(`üéâ Achievement Unlocked: ${badge.querySelector('.title').textContent}!`);
                    }
                    progressBar.style.width = '100%';
                } else {
                    badge.classList.remove('achieved');
                    const progress = Math.min((val / threshold) * 100, 100);
                    progressBar.style.width = progress + '%';
                }
            });

            if (achievementsUnlocked > 0) {
                // Add celebration effect
                document.body.style.animation = 'none';
                document.body.offsetHeight; // Trigger reflow
                document.body.style.animation = 'celebration 0.5s ease';
            }
        }

        input.addEventListener('input', () => {
            const val = parseInt(input.value, 10);
            if (isNaN(val) || val < 0) {
                badges.forEach(badge => {
                    badge.classList.remove('achieved');
                    badge.querySelector('.progress-bar').style.width = '0%';
                });
                return;
            }
            updateBadges(val);
        });

        // Add celebration animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes celebration {
                0%, 100% { transform: scale(1); }
                50% { transform: scale(1.02); }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>