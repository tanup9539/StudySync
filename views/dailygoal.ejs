<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Set Goals - StudySync</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            background-image: url('/img/noise.png');
            min-height: 100vh;
            padding: 2rem;
            color: #333;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 3rem;
            color: rgb(51, 10, 90);
        }

        .header h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }

        .header p {
            font-size: 1.2rem;
            opacity: 0.9;
            font-weight: 300;
        }

        .goals-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .goal-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 2.5rem;
            border-radius: 25px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .goal-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.15);
        }

        .goal-card h2 {
            font-size: 1.8rem;
            color: #667eea;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            color: #555;
            margin-bottom: 0.8rem;
            font-size: 1.1rem;
        }

        .form-group input {
            width: 100%;
            padding: 1rem 1.5rem;
            font-size: 1rem;
            border: 2px solid #e1e5e9;
            border-radius: 15px;
            background: white;
            transition: all 0.3s ease;
        }

        .form-group input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

        .form-group textarea {
            width: 100%;
            padding: 1rem 1.5rem;
            font-size: 1rem;
            border: 2px solid #e1e5e9;
            border-radius: 15px;
            background: white;
            transition: all 0.3s ease;
            resize: vertical;
            min-height: 100px;
            font-family: 'Poppins', sans-serif;
        }

        .form-group textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

        .btn-save {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 1rem;
        }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }

        .current-goals {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 2.5rem;
            border-radius: 25px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }

        .current-goals h2 {
            font-size: 2rem;
            color: #667eea;
            margin-bottom: 2rem;
            text-align: center;
        }

        .goal-item {
            background: white;
            padding: 1.5rem;
            border-radius: 15px;
            margin-bottom: 1rem;
            border-left: 4px solid #667eea;
            transition: all 0.3s ease;
        }

        .goal-item:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .goal-item h3 {
            color: #333;
            margin-bottom: 0.5rem;
            font-size: 1.2rem;
        }

        .goal-item p {
            color: #666;
            line-height: 1.6;
        }

        .goal-item .date {
            color: #999;
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }

        .progress-section {
            margin-top: 2rem;
        }

        .progress-item {
            margin-bottom: 1.5rem;
        }

        .progress-label {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .progress-bar {
            height: 8px;
            background: #f0f0f0;
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 4px;
            transition: width 0.5s ease;
            width: 0%;
        }

        .empty-state {
            text-align: center;
            color: #999;
            padding: 2rem;
        }

        .empty-state .icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        @media (max-width: 768px) {
            .goals-grid {
                grid-template-columns: 1fr;
            }
            
            .header h1 {
                font-size: 2rem;
            }
            
            .goal-card, .current-goals {
                padding: 1.5rem;
            }
        }

        .success-message {
            background: linear-gradient(135deg, #4CAF50, #45a049);
            color: white;
            padding: 1rem 2rem;
            border-radius: 15px;
            margin: 1rem 0;
            text-align: center;
            font-weight: 500;
            opacity: 0;
            transform: translateY(-20px);
            transition: all 0.3s ease;
        }

        .success-message.show {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Set Your Goals</h1>
            <p>Plan your learning journey and track your progress</p>
        </div>

        <div class="goals-grid">
            <div class="goal-card">
                <h2>ðŸ“… Daily Goal</h2>
                <form id="dailyGoalForm">
                    <div class="form-group">
                        <label for="dailyGoalTitle">Goal Title</label>
                        <input type="text" id="dailyGoalTitle" placeholder="e.g., Complete 3 math lessons" />
                    </div>
                    <div class="form-group">
                        <label for="dailyGoalDescription">Description</label>
                        <textarea id="dailyGoalDescription" placeholder="Describe what you want to achieve today..."></textarea>
                    </div>
                    <button type="submit" class="btn-save">ðŸ’¾ Save Daily Goal</button>
                </form>
            </div>

            <div class="goal-card">
                <h2>ðŸ“Š Weekly Goal</h2>
                <form id="weeklyGoalForm">
                    <div class="form-group">
                        <label for="weeklyGoalTitle">Goal Title</label>
                        <input type="text" id="weeklyGoalTitle" placeholder="e.g., Master algebra basics" />
                    </div>
                    <div class="form-group">
                        <label for="weeklyGoalDescription">Description</label>
                        <textarea id="weeklyGoalDescription" placeholder="Describe your weekly learning objectives..."></textarea>
                    </div>
                    <button type="submit" class="btn-save">ï¿½ï¿½ Save Weekly Goal</button>
                </form>
            </div>
        </div>

        <div class="current-goals">
            <h2>ðŸ“Œ Current Goals</h2>
            <div id="goalsDisplay">
                <div class="empty-state">
                    <div class="icon">ðŸŽ¯</div>
                    <p>No goals set yet. Start by setting your first goal above!</p>
                </div>
            </div>

            <div class="progress-section">
                <h3>ðŸ“ˆ Progress Tracking</h3>
                <div class="progress-item">
                    <div class="progress-label">
                        <span>Daily Goal Progress</span>
                        <span id="dailyProgress">0%</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" id="dailyProgressBar"></div>
                    </div>
                </div>
                <div class="progress-item">
                    <div class="progress-label">
                        <span>Weekly Goal Progress</span>
                        <span id="weeklyProgress">0%</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" id="weeklyProgressBar"></div>
                    </div>
                </div>
            </div>
        </div>

        <div id="successMessage" class="success-message"></div>
    </div>

    <script>
        let goals = {
            daily: null,
            weekly: null
        };

        function showSuccessMessage(message) {
            const successMsg = document.getElementById('successMessage');
            successMsg.textContent = message;
            successMsg.classList.add('show');
            setTimeout(() => {
                successMsg.classList.remove('show');
            }, 3000);
        }

        function updateGoalsDisplay() {
            const goalsDisplay = document.getElementById('goalsDisplay');
            
            if (!goals.daily && !goals.weekly) {
                goalsDisplay.innerHTML = `
                    <div class="empty-state">
                        <div class="icon">ðŸŽ¯</div>
                        <p>No goals set yet. Start by setting your first goal above!</p>
                    </div>
                `;
                return;
            }

            let html = '';
            
            if (goals.daily) {
                html += `
                    <div class="goal-item">
                        <h3>ï¿½ï¿½ Today's Goal</h3>
                        <p><strong>${goals.daily.title}</strong></p>
                        <p>${goals.daily.description}</p>
                        <div class="date">Set on: ${goals.daily.date}</div>
                    </div>
                `;
            }
            
            if (goals.weekly) {
                html += `
                    <div class="goal-item">
                        <h3>ï¿½ï¿½ This Week's Goal</h3>
                        <p><strong>${goals.weekly.title}</strong></p>
                        <p>${goals.weekly.description}</p>
                        <div class="date">Set on: ${goals.weekly.date}</div>
                    </div>
                `;
            }
            
            goalsDisplay.innerHTML = html;
        }

        function updateProgress() {
            const dailyProgress = goals.daily ? Math.min(Math.random() * 100, 100) : 0;
            const weeklyProgress = goals.weekly ? Math.min(Math.random() * 100, 100) : 0;
            
            document.getElementById('dailyProgress').textContent = Math.round(dailyProgress) + '%';
            document.getElementById('weeklyProgress').textContent = Math.round(weeklyProgress) + '%';
            document.getElementById('dailyProgressBar').style.width = dailyProgress + '%';
            document.getElementById('weeklyProgressBar').style.width = weeklyProgress + '%';
        }

        document.getElementById('dailyGoalForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const title = document.getElementById('dailyGoalTitle').value;
            const description = document.getElementById('dailyGoalDescription').value;
            
            if (title && description) {
                goals.daily = {
                    title: title,
                    description: description,
                    date: new Date().toLocaleDateString()
                };
                
                updateGoalsDisplay();
                updateProgress();
                showSuccessMessage('ðŸŽ‰ Daily goal saved successfully!');
                
                // Clear form
                this.reset();
            }
        });

        document.getElementById('weeklyGoalForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const title = document.getElementById('weeklyGoalTitle').value;
            const description = document.getElementById('weeklyGoalDescription').value;
            
            if (title && description) {
                goals.weekly = {
                    title: title,
                    description: description,
                    date: new Date().toLocaleDateString()
                };
                
                updateGoalsDisplay();
                updateProgress();
                showSuccessMessage('ðŸŽ‰ Weekly goal saved successfully!');
                this.reset();
            }
        });
        updateGoalsDisplay();
        updateProgress();
    </script>
</body>
</html>